<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/marvel_background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_hq_home"
        android:layout_width="120dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/marvel_background_color"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgview_hq_recycler"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:background="@drawable/frame"
                android:src="@drawable/splash"
                android:cropToPadding="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txt_comic_title"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/imgview_hq_recycler"
                app:layout_constraintStart_toStartOf="@+id/imgview_hq_recycler"
                app:layout_constraintEnd_toEndOf="@+id/imgview_hq_recycler"
                app:layout_constraintBottom_toBottomOf="parent"
                app:autoSizeTextType="uniform"
                tools:text="Teste"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>